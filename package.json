{
  "name": "vite-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .ts packages/*/src/**",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@types/node": "^14.14.10",
    "@typescript-eslint/parser": "^4.9.1",
    "enquirer": "^2.3.6",
    "eslint": "^7.15.0",
    "eslint-plugin-node": "^11.1.0",
    "execa": "^5.0.0",
    "lint-staged": "^10.5.3",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.4",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  }
}
